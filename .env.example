# ตัวอย่างการตั้งค่า Environment Variables สำหรับ Render

# สำหรับ Render deployment
RENDER=true
DEBUG=false
SECRET_KEY=your-secret-key-here
DATABASE_URL=postgres://user:password@host:port/database
REDIS_URL=redis://default:xxxxx@singapore-redis.upstash.io:6379

# สำหรับ Local development (ถ้าไม่ใช้ Render)
RENDER=false
DEBUG=true
SECRET_KEY=your-local-secret-key
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_HOST=localhost
DB_PORT=5432

# GCS Configuration (เฉพาะ local development)
GCS_BUCKET_NAME=your-gcs-bucket
GCS_SERVICE_ACCOUNT_KEY=path/to/service-account.json
GCP_PROJECT_ID=your-gcp-project-id
